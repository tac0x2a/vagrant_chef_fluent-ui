#!/bin/sh

# chkconfig: - 85 15
# description: start/stop fluentd-ui script.
# processname: fluentd-ui

export PATH=/usr/local/bin:/bin:/usr/bin:/usr/local/sbin:/usr/sbin:/sbin

# move to project root directory
NAME="fluentd-ui"
FLUENTD_UI_PATH="/usr/local/bin"

start()
{
  echo "start $NAME";
  su -c "$FLUENTD_UI_PATH/fluentd-ui start"
}

stop()
{
  echo "stop $NAME";
  su -c "$FLUENTD_UI_PATH/fluentd-ui stop"
}

status()
{
  echo "stop $NAME";
  su -c "$FLUENTD_UI_PATH/fluentd-ui status"
}

restart()
{
    stop
    start
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  status)
    status
    ;;
  restart)
    restart
    ;;
  *)
    echo "Syntax Error: release [start|stop|status|restart]"
    ;;
esac

exit
