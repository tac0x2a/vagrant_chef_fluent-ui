#!/bin/sh

export PATH=/usr/local/bin:/bin:/usr/bin:/usr/local/sbin:/usr/sbin:/sbin

NAME="fluentd-ui"
FLUENTD_UI_PATH="/usr/local/bin"
PIDFILE=/run/${NAME}.pid

case "$1" in
    start)
        start-stop-daemon --background --start --quiet --pidfile $PIDFILE \
                          --make-pidfile --exec $FLUENTD_UI_PATH/$NAME -- start
        ;;
    stop)
        $FLUENTD_UI_PATH/$NAME stop
        rm -f $PIDFILE
        ;;
    status)
        $FLUENTD_UI_PATH/$NAME status
        ;;
    *)
        ;;
esac

exit 0
